<body>
    <form id="form1" runat="server">
    <div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<%--<form class="login100-form validate-form">--%>
					<span class="login100-form-title p-b-49">
						HRMIS
					</span>

					<div class="wrap-input100 validate-input m-b-23" data-validate = "Username is reauired">
						<span class="label-input100">Username</span>
                        <asp:TextBox ID="txtUserName" runat="server" class="input100" placeholder="Type your username"></asp:TextBox>
						<span class="focus-input100" data-symbol="&#xf206;"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Password is required">
						<span class="label-input100">Password</span>
                        <asp:TextBox ID="txtPassword" TextMode="Password" runat="server" class="input100" placeholder="Type your password"></asp:TextBox>
						<span class="focus-input100" data-symbol="&#xf190;"></span>
                        <%--<i class="fa fa-eye" id="togglePassword" style="margin-left: -30px; cursor: pointer;"></i>--%>
					</div>
                    <div style="color:grey; padding-top:10px;">
                        <span><input type="checkbox" onclick="myFunction()" />&nbsp Show Password</span>
                    </div>
					<asp:Label ID="lblErrorMsg" runat="server" Text="Your Username and Password is invalid!" ForeColor="Red"></asp:Label>
                    <asp:Label ID="lblUserRole" runat="server" Text="You Don't have the rights to access the dashboard!" ForeColor="Red"></asp:Label>
					<div class="text-right p-t-8 p-b-31">
						
						<a href="#">
							Forgot password?
						</a>
					</div>
					
					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn">

							</div>
                            <asp:Button ID="btnlogin" class="login100-form-btn" runat="server" Text="Login" OnClick="btnlogin_Click" style="outline: none !important; border: none; background: transparent;" />
						</div>
					</div>
				<%--</form>--%>
			</div>
		</div>
	</div>
	

